#scene {
    background: image_url('scene400.jpg');
    @media (min-resolution: 1.5dppx) {
        background: image_url('scene800.jpg');
        background-size: cover;
    }
    background-size: cover;
    height: 400px;
    border-radius: 5px;
    margin: 10px auto;
    box-shadow: 0 0 10px black;
}

#intro-text {
    text-shadow: 0 5px 10px black;
    h1, p {
        color: white;
    }
    p {
        font-size: 1.3em;
    }
    h1 {
        font-size: 3.5em;
        line-height: 1.3em;
        padding-bottom: 20px;
    }
    @media #{$small-only} {
        p {
            font-size: 1.1em;
        }
        h1 {
            font-size: 3em;
            line-height: 1em;
            padding-bottom: 10px;
        }
    }
}

.wrapper {
    max-height: 460px;
    background-color: #333;
    box-shadow: inset 0 15px 15px -12px black, inset 0 -15px 15px -12px black;
    padding: 20px 0;
    @media #{$small-only} {
        padding: 5px 0;
    }
}

#files-scroll {
    // see http://stackoverflow.com/questions/15906508/chrome-browser-for-android-no-longer-supports-webkit-overflow-scrolling-is-the
    z-index: 0;
    overflow-y: auto;
    overflow-x: hidden;
    border: 1px solid #ddd;
    border-top: none;
}

#files-table {
    width: 100%;
    border-collapse: collapse;

    .selected-row {
        background-color: #ddd;
    }

    a {
        color: $body-font-color;
    }

    @media #{$small-only} {
        .date-column, .size-column {
            display: none;
        }
    }

    tr td {
        font-size: 14px;
        padding: 6px 5px;
        vertical-align: middle;
        @media #{$small-only} {
            padding: 12px 5px;
        }
    }

    .rename {
        margin-left: 10px;
    }

    .icon {
        width: 24px;
        height: 24px;
        img {
            max-width: 24px;
        }
    }

    .menu-button {
        text-align: center;
        width: 32px;
        height: 24px;
        cursor: pointer;
        svg {
            shape-rendering: crispEdges;
        }
        .menu-svg {
            fill: #aaa;
        }
        &:hover {
            .menu-svg {
                fill: #666;
            }
        }
    }

    .filename {
        overflow: hidden;
        max-width: 100px;
        cursor: pointer;
        &:hover {
            text-decoration: underline;
        }
    }

    .size-column {
        width: 64px;
        text-align: center;
    }

    .date-column {
        width: 150px;
        text-align: center;
    }

}

#menubar {
    padding: 10px;
    margin-bottom: 0px;
    display: table;
    width: 100%;
    .breadcrumbs {
        @media #{$small-only} {
            display: none;
        }
        @media #{$medium-up} {
            display: table-cell;
            vertical-align: middle;
            padding: 0;
            border: none;
            background: none;
            margin: 0;
        }
    }

    #menu-actions {
        list-style: none;
        a img {
            margin: 0 5px;
            opacity: 0.3;
            height: 20px;
            &:hover {
                opacity: 1;
            }
        }
        a.active img {
            opacity: 1;
        }
        @media #{$medium-up} {
            float: right;
            display: table-cell;
        }
        @media #{$small-only} {
            text-align: center;
            a {
                display: inline-block;
                height: 24px;
                img {
                    padding: 0 30px;
                    height: 24px;
                }
                &:not(:first-child) {
                    border-left: 1px solid #aaa;
                }
            }
        }
    }
}

.breadcrumbs a, #app-side a {
    color: #666;
    &:hover {
        color: black;
    }
}

#app-container {
    @media #{$small-only} {
        margin: 0 5px;
    }
    @media #{$medium-up} {
        max-width: 1000px;
        border-spacing: 10px 0;
        width: 90%;
        margin: 0 auto;
    }
}

.context-menu {
    @media #{$small-only} {
        height: 67px;
        width: 150px;
        li {
            font-size: 20px;
        }
    }
    @media #{$medium-up} {
        height: 54px;
        width: 150px;
    }
    position: fixed;
    background-color: white;
    margin: 0;
    border: 1px solid #888;
    box-shadow: 0 0 4px #777;
    ul {
        list-style: none;
        margin: 0;
        li {
            &:not(:last-child) {
                border-bottom: 1px solid #ddd;
            }
            padding-left: 5px;
            cursor: pointer;
            a {
                color: $body-font-color;
            }
            &:hover {
                background-color: #ddd;
            }
        }
    }
}