                    <% end %>
                    <li><a href="#">Download</a></li>
                    <li class="divider-vertical"></li>
                    <% if (yield :title_suffix)=='Contribute' %>
                        <li><%= link_to 'Contribute', contribute_path, class: 'active' %></li>
                    <% else %>
                        <li><%= link_to 'Contribute', contribute_path %></li>
                        <li class="divider-vertical"></li>
                    <% end %>
                    <% if (yield :title_suffix)=='About Us' %>
                        <li><%= link_to 'About Us', about_path, class: 'active' %></li>
                    <% else %>
                        <li><%= link_to 'About Us', about_path %></li>
                        <li class="divider-vertical"></li>
                    <% end %>
                    <% if (yield :title_suffix)=='Login' %>
                        <li><%= link_to 'Login', login_path, class: 'active' %></li>
                    <% else %>
                        <li><%= link_to 'Login', login_path %></li>
                        <li class="divider-vertical"></li>
                    <% end %>
