<% if @user.errors.any? %>
stop_spinner();
$('small.error').remove();
<% @user.errors.full_messages_for(:password).each do |error| %>
$('#password').after('<small class="error"><%= error %></small> ');
<% end %>
<% @user.errors.full_messages_for(:password_confirmation).each do |error| %>
$('#password_confirmation').after('<small class="error"><%= error %></small> ');
<% end %>
$('#inputs').addClass('error');
<% else %>
<% flash[:message] = 'Password Changed Successfully' %>
window.location.replace('<%= new_session_url %>');
<% end %>