<% if @user.errors.any? %>
stop_spinner();
if (!$('.error').length)
{
    $('#password_confirmation').after('<small class="error"><%= @user.errors.full_messages.first %></small> ');
}
$('#inputs').addClass('error');
<% else %>
<% flash[:message] = 'Password Changed Successfully' %>
window.location.replace('<%= new_session_url %>');
<% end %>