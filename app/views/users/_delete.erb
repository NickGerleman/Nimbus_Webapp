<div class="popup">
    <header>
        <h3>Delete My Account</h3>
    </header>
    <p>
        Please confirm your password. Note that there is no way to undo this action.
    </p>
    <%= form_tag user_path(current_user.id), method: :delete, onsubmit: 'form_methods.toggle_load();', remote: true do %>
        <div class="row">
            <div class="large-4 columns">
                <%= label_tag :password, 'Password:', class: 'inline' %>
            </div>
            <div class="large-8 columns">
                <%= password_field_tag :password %>
            </div>
        </div>

        <footer>
            <span class="load hide">Loading...</span>
            <%= submit_tag 'Delete', class: 'button submit' %>
        </footer>
    <% end %>
</div>
